<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="12dp"
    tools:context=".consumer.ConfirmPurchaseDiaglogFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="Confirmar pedido"
        android:textColor="#17226C"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderTextConsumer"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="ahskjdkjasdkasdjkakjsdhkajshdjkashdjhkasdjasjkdasjkdasjdhajskdhjksahdjaskdhjakshdasjkd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingRight="8dp"
        app:layout_constraintEnd_toEndOf="@+id/orderTextConsumer"
        app:layout_constraintStart_toStartOf="@+id/orderTextConsumer"
        app:layout_constraintTop_toBottomOf="@+id/orderTextConsumer">

        <Button
            android:id="@+id/discardOrderConsumerBtn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="Cancelar"
            android:textSize="11dp"
            app:layout_constraintStart_toEndOf="@+id/acceptOrderConsumerBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/acceptOrderConsumerBtn"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="Aceptar"
            android:textSize="11dp"
            app:iconPadding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/keepBuyingConsumerBtn"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="Seguir "
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/discardOrderConsumerBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>